# ============================================================================
# PUMP IOT PLATFORM - CONFIGURACIÓN DE ENTORNO
# ============================================================================
# Copiar este archivo a .env y configurar los valores
# ============================================================================

# --- Base de Datos ---
# Cadena de conexión PostgreSQL
# Formato: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://pump_user:SecurePassword123!@localhost:5432/pump_iot_db"

# --- Servidor ---
# Puerto donde escucha la API
PORT=4000

# Entorno de ejecución (development | production)
NODE_ENV=development

# URL del frontend (para CORS)
FRONTEND_URL=http://localhost:3000

# --- Seguridad / JWT ---
# Secreto para firmar tokens JWT (mínimo 32 caracteres)
# IMPORTANTE: Generar un valor aleatorio único para producción
JWT_SECRET="CAMBIAR_EN_PRODUCCION_clave_secreta_de_32_caracteres_minimo"

# Tiempo de expiración de tokens en segundos (ej: 28800 = 8h)
JWT_EXPIRES_IN_SECONDS=28800

# --- Prisma (Air-Gap) ---
# Desactivar telemetría para entornos sin internet
PRISMA_TELEMETRY_INFORMATION=false
CHECKPOINT_DISABLE=1
PRISMA_HIDE_UPDATE_MESSAGE=true
